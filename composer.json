{
  "name" : "tankertrackers/convert",
  "description" : "Convert freely between various types of petroleum-related fluid measurements",
  "homepage" : "https://github.com/TankerTrackers/Convert",
  "type" : "library",
  "require": {
    "php": "^8.0"
  },
  "require-dev" : {
    "pestphp/pest": "^1.22",
    "psy/psysh": "^0.11.8",
    "brekitomasson/php-cs-fixer-breki-config": "^1.1"
  },
  "license" : "MIT",
  "authors" : [
    {
      "name" : "Breki Tomasson",
      "email" : "breki.tomasson@gmail.com"
    }
  ],
  "minimum-stability" : "beta",
  "autoload" : {
    "psr-4" : {
      "TankerTrackers\\" : "src"
    }
  },
  "scripts": {
    "fix": "vendor/bin/php-cs-fixer fix --config ./.php-cs-fixer.php",
    "pest": "vendor/bin/pest --colors=always"
  },
  "autoload-dev" : {
    "psr-4" : {
      "TankerTesters\\" : "test"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
